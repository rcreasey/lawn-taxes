.navbar.navbar-default.navbar-fixed-top
  .container
    .navbar-header
      button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href='/') LAWN Moon Taxes
    .navbar-collapse.collapse
      ul.nav.navbar-nav
        li(class=title.match(/^Market/g)?'active':undefined)
          a(href='/market') Market
        li(class=title.match(/^Operations.*/g)?'active':undefined)
          a(href='/operations') Operations
      ul.nav.navbar-nav.navbar-right
        li
          if user
            a(href="/logout") Logout
          else
            a(href="/login") Login
