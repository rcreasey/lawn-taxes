extends ../layout/default

block content
  h2 Create User
  form.form-horizontal(action='/users', method='POST')
    .form-group
      label.col-lg-2.control-label(for='username') Username
      .col-lg-10
        input#username.form-control(type='text', name='username', autofocus)
    .form-group
      label.col-lg-2.control-label(for='password') Password
      .col-lg-10
        input#password.form-control(type='password', name='password')
    .form-group
      .col-lg-offset-2.col-lg-10
        button.btn.btn-primary(type='submit') Create User
