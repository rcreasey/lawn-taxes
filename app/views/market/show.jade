extends ../layout/default

block content
  .media
    img.pull-left.media-object(src="http://image.eveonline.com/Type/#{invtype.typeID}_64.png")
    .media-body
      h1= invtype.typeName
      h4 Market Details

  .row
    .col-md-7
      include _table

    #tax-form.col-md-5
      h3 Calculate Taxes
      form.form(method='POST', action='/market/#{invtype.typeID}/taxes')
        .form-group
          select#rate.form-control(name='rate')
            option(value='0.90') R64 (90%)
            option(value='0.90') R32 (90%)
            option(value='0.80') R16 (80%)
            option(value='0.00') R8 (0%)
            option(value='0.00') R4 (0%)

        .form-group
          input#quantity.form-control(name='quantity', type='text', placeholder='Material Quantity')

        .form-group
          label(for='start') Start Date
          .input-group
            input#start.form-control(name='start', type='text', placeholder='Start Date', data-date-format='mm-dd-yyyy', value=moment().subtract('month', 1).format("MM-DD-YYYY"))
            span.input-group-addon
              span.glyphicon.glyphicon-calendar

        .form-group
          label(for='end') End Date
          .input-group
            input#end.form-control(name='end', type='text', placeholder='End Date', data-date-format='mm-dd-yyyy', value=moment().format("MM-DD-YYYY"))
            span.input-group-addon
              span.glyphicon.glyphicon-calendar

        .form-group
          button.btn.btn-primary(type='submit') Calculate

      :coffeescript
        $(document).ready ->
          $('#start').datepicker();
          $('#end').datepicker();
