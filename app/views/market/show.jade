extends ../layout/default

block content
  .media
    img.pull-left.media-object(src="http://image.eveonline.com/Type/#{invtype.typeID}_64.png")
    .media-body
      h1= invtype.typeName
      h4 Market Details

  .row
    .col-md-7
      table#market-data.table.table-striped.table-condensed
        thead
          tr
            th Date
            th Min
            th Max
            th Average
            th Volume
            th Movement
        tbody
          each datum in datums
            tr
              td= moment(String(datum.date)).format("YYYY-MM-DD")
              td= accounting.formatNumber(datum.min)
              td= accounting.formatNumber(datum.max)
              td= accounting.formatNumber(datum.average)
              td= accounting.formatNumber(datum.volume)
              td= accounting.formatNumber(datum.movement)

    #tax-form.col-md-5
      h3 Calculate Taxes
      form.form
        .form-group
          select#rate.form-control
            option(value='0.90') R64 (90%)
            option(value='0.90') R32 (90%)
            option(value='0.80') R16 (80%)
            option(value='0.00') R8 (0%)
            option(value='0.00') R4 (0%)

        .form-group
          input#quantity.form-control(type='text', placeholder='Material Quantity')

        .form-group
          .input-group
            input#start.form-control(type='text', placeholder='Start Date', data-date-format='mm-dd-yyyy')
            span.input-group-addon
              span.glyphicon.glyphicon-calendar

        .form-group
          .input-group
            input#end.form-control(type='text', placeholder='End Date', data-date-format='mm-dd-yyyy')
            span.input-group-addon
              span.glyphicon.glyphicon-calendar

        .form-group
          button.btn.btn-primary(type='submit') Calculate

      :coffeescript
        $(document).ready ->
          $('#start').datepicker();
          $('#end').datepicker();
