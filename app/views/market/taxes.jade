extends ../layout/default

block content
  .media
    img.pull-left.media-object(src="http://image.eveonline.com/Type/#{invtype.typeID}_64.png")
    .media-body
      h1= invtype.typeName

  .row

    #taxes.col-md-5.well
      h3 Projected Taxes 
      h4 Period: #{moment(taxes.start).format('MM/DD')} to #{moment(taxes.end).format('MM/DD')} (#{taxes.range.count('days')} days) 

      dl.dl-horizontal

        dt Units
        dd= accounting.formatNumber(taxes.quantity)

        dt Average Price
        dd x #{accounting.toFixed(taxes.price, 2)}

        dt Pre-tax Total
        dd.subtotal= accounting.formatNumber( taxes.quantity * taxes.price )

        dt Tax Rate
        dd x #{parseInt(taxes.rate * 100)} %

        dt Total Due
        dd.subtotal
          strong= accounting.formatNumber( taxes.quantity * taxes.price * taxes.rate )

    .col-md-7
      include _table